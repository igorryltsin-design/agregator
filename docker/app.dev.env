# Development overrides for Agregator
# Copy as needed and adjust credentials for your local machine.
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_SECRET_KEY=dev-secret

# Basic library behavior
SCAN_ROOT=/data
EXTRACT_TEXT=true
OCR_LANGS=rus+eng

# Default admin credentials for local testing
DEFAULT_ADMIN_USER=admin
DEFAULT_ADMIN_PASSWORD=admin123

# Disable heavyweight subsystems unless explicitly enabled
TRANSCRIBE_ENABLED=false
SUMMARIZE_AUDIO=false
AUDIO_KEYWORDS_LLM=false

# LLM endpoint defaults to host machine (e.g., LM Studio)
LMSTUDIO_API_BASE=http://host.docker.internal:1234/v1
LMSTUDIO_MODEL=google/gemma-3n-e4b
LMSTUDIO_API_KEY=
LM_DEFAULT_PROVIDER=openai

# Tune HTTP/LLM cache behavior for faster feedback loops
AG_HTTP_TIMEOUT=60
AG_HTTP_CONNECT_TIMEOUT=10
AG_HTTP_RETRIES=2
AG_HTTP_BACKOFF=0.3
LOG_LEVEL=DEBUG

# PostgreSQL for development (docker-compose service `postgres`)
DATABASE_URL=postgresql://agregator:agregator@postgres:5432/agregator

# LLM pool defaults
LLM_POOL_GLOBAL_CONCURRENCY=4
LLM_POOL_PER_USER_CONCURRENCY=1
LLM_QUEUE_MAX_SIZE=100
LLM_QUEUE_PER_USER_MAX=10
LLM_REQUEST_TIMEOUT_SEC=90
LLM_RETRY_COUNT=1
LLM_RETRY_BACKOFF_MS=500
LMSTUDIO_IDLE_UNLOAD_MINUTES=0
SETTINGS_HUB_V2_ENABLED=1
RAG_EMBEDDING_BATCH_SIZE=32
