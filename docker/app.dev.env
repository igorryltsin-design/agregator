# Development overrides for Agregator
# Copy as needed and adjust credentials for your local machine.
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_SECRET_KEY=dev-secret

# Basic library behavior
SCAN_ROOT=/data
EXTRACT_TEXT=true
OCR_LANGS=rus+eng

# Default admin credentials for local testing
DEFAULT_ADMIN_USER=admin
DEFAULT_ADMIN_PASSWORD=admin123

# Disable heavyweight subsystems unless explicitly enabled
TRANSCRIBE_ENABLED=false
SUMMARIZE_AUDIO=false
AUDIO_KEYWORDS_LLM=false

# LLM endpoint defaults to host machine (e.g., LM Studio)
LMSTUDIO_API_BASE=http://host.docker.internal:1234/v1
LMSTUDIO_MODEL=google/gemma-3n-e4b
LMSTUDIO_API_KEY=
LM_PROVIDER=openai

# Tune HTTP/LLM cache behavior for faster feedback loops
AG_HTTP_TIMEOUT=60
AG_HTTP_CONNECT_TIMEOUT=10
AG_HTTP_RETRIES=2
AG_HTTP_BACKOFF=0.3
LOG_LEVEL=DEBUG
