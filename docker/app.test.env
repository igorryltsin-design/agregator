# Test runner overrides for docker-compose.test.yml
FLASK_ENV=testing
FLASK_DEBUG=0

# Skip heavy processing during tests
EXTRACT_TEXT=false
TRANSCRIBE_ENABLED=false
SUMMARIZE_AUDIO=false
AUDIO_KEYWORDS_LLM=false

# Use deterministic admin credentials for fixtures
DEFAULT_ADMIN_USER=test-admin
DEFAULT_ADMIN_PASSWORD=test-admin

# Keep queueing deterministic in tests
LLM_POOL_GLOBAL_CONCURRENCY=2
LLM_POOL_PER_USER_CONCURRENCY=1
LLM_QUEUE_MAX_SIZE=20
LLM_QUEUE_PER_USER_MAX=5
LLM_REQUEST_TIMEOUT_SEC=30
LMSTUDIO_IDLE_UNLOAD_MINUTES=0
SETTINGS_HUB_V2_ENABLED=1
